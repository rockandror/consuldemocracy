<h3 class="proposal-title">
  <%= link_to proposal.title, proposal, target: "_blank" %>
</h3>

<% if proposal.retired? %>
      <span class="label alert"><%= t("users.proposals.retired") %></span>
<% elsif proposal.draft? %>
  <span class="label info"><%= t("users.proposals.draft") %></span>
<% elsif proposal.voting_in_review? %>
  <span class="label warning"><%= t("users.proposals.voting_in_review") %></span>
<% elsif proposal.voting_disabled? %>
  <span class="label alert"><%= t("users.proposals.voting_disabled") %></span>
<% else %>
  <span class="label success"><%= t("users.proposals.published") %></span>
<% end %>

<% if content_for?(:action_title) %>
  <h3 class="title"><%= yield(:action_title) %></h3>
<% end %>
