<footer>
  <div class="row">
    <div class="footer-sections small-12 column">
      <div class="small-12 medium-2 column end">      
        <p class="title sin-linea-border"><%= t("layouts.footer.decide_madrid_title")%></p>
        <p><%= t("layouts.footer.decide_madrid_text").html_safe %></p>
      </div>

      <div class="small-12 medium-2 column end">      
        <p class="title sin-linea-border"><%= t("layouts.footer.problem_title")%></p>
        <p><%= t("layouts.footer.problem_text").html_safe %></p>
      </div>

      <div class="small-12 medium-2 column end">      
        <p class="title sin-linea-border"><%= t("layouts.footer.help_title")%></p>
        <p><%= t("layouts.footer.help_text").html_safe %></p>
      </div>

      <div class="small-12 medium-2 column end">      
        <p class="title sin-linea-border"><%= t("layouts.footer.transparency_title")%></p>
        <p><%= t("layouts.footer.transparency_text").html_safe %></p>
      </div>

      <div class="small-12 medium-2 column end">      
        <p class="title sin-linea-border"><%= t("layouts.footer.open_data_title")%></p>
        <p><%= t("layouts.footer.open_data_text").html_safe %></p>
      </div>
    </div>
  </div>

  <div class="subfooter">
    <div class="row">
      <div class="small-12 medium-7 column">        
        <ul class="no-bullet inline-block">
          <li class="inline-block"><%= t("layouts.footer.copyright", year: Time.current.year) %>&nbsp;&nbsp;</li>
          <li class="inline-block"><%= link_to t("layouts.footer.privacy"), privacy_path %>&nbsp;|</li>
          <li class="inline-block"><%= link_to t("layouts.footer.conditions"), conditions_path %>&nbsp;|</li>
          <li class="inline-block"><%= link_to t("layouts.footer.accessibility"), accessibility_path %></li>
        </ul>
      </div>

      <div class="small-12 medium-5 column social">
        <div class="text-right">
          <ul>
            <% if setting["twitter_handle"] %>
              <li class="inline-block">
                <%= link_to t("social.twitter_link"),
                              "https://twitter.com/#{setting["twitter_handle"]}", target: "_blank",
                              title: t("shared.go_to_page") + t("social.twitter", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <% if setting["facebook_handle"] %>
              <li class="inline-block">
                <%= link_to t("social.facebook_link"),
                              "https://www.facebook.com/#{setting["facebook_handle"]}/", target: "_blank",
                              title: t("shared.go_to_page") + t("social.facebook", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <%  if setting["blog_url"] %>
              <li class="inline-block">
                <%= link_to t("social.blog_link"),
                              setting["blog_url"], target: "_blank",
                              title: t("shared.go_to_page") + t("social.blog", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <% if setting["youtube_handle"] %>
              <li class="inline-block">
                <%= link_to t("social.youtube_link"),
                              "https://www.youtube.com/#{setting["youtube_handle"]}", target: "_blank",
                              title: t("shared.go_to_page") + t("social.youtube", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <% if setting["telegram_handle"] %>
              <li class="inline-block">
                <%= link_to t("social.telegram_link"),
                              "https://www.telegram.me/#{setting["telegram_handle"]}", target: "_blank",
                              title: t("shared.go_to_page") + t("social.telegram", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <% if setting["instagram_handle"] %>
              <li class="inline-block">
                <%= link_to t("social.instagram_link"),
                              "https://www.instagram.com/#{setting["instagram_handle"]}", target: "_blank",
                              title: t("shared.go_to_page") + t("social.instagram", org: setting["org_name"]) + t("shared.target_blank_html") %>
              </li>
            <% end %>
            <%= raw content_block("footer", I18n.locale) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
