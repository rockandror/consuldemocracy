<section class="reveal heading-mode" id="heading_mode" data-reveal>
  <h1><%= t("#{namespace}.title") %></h1>

  <% modes.each do |mode| %>
    <section class="<%= mode %>-heading-option">
      <h2><%= sanitize(t("#{namespace}.#{mode}.title")) %></h2>
      <p><%= t("#{namespace}.#{mode}.description") %></p>
      <%= link_to t("#{namespace}.#{mode}.link"),
                  new_admin_budget_path(mode: mode), data: { close: "" } %>
    </section>
  <% end %>

  <button class="close-button" aria-label="<%= t("admin.shared.close_modal") %>"
          type="button" data-close>
    &times;
  </button>
</section>
