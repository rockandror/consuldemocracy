<tr id="<%= dom_id(budget) %>" class="budget">
  <td>
    <%= budget.name %>
  </td>
  <td>
    <%= budget.current_phase.name %>
  </td>
  <td>
    <%= investments_count %>
  </td>
  <td>
    <%= link_to t("valuation.budgets.index.evaluate"),
                valuation_budget_budget_investments_path(budget_id: budget.id),
                class: "button hollow expanded" %>
  </td>
</tr>
